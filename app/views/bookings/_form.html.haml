
.row
  .medium-6.medium-centered
    = form_for @booking do |f|
      - if @booking.errors.any?
        #error_explanation
          %h2= "#{pluralize(@booking.errors.count, "error")} prohibited this booking from being saved:"
          %ul
            - @booking.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :name
        = f.select(:name , ['Backyard','Laundry', 'Roof Terrace','Sauna'])
      .field
        = f.label :start_time
        = f.datetime_select :start_time
      .field
        = f.label :recurring
        = f.select_recurring  :recurring, nil, allow_blank: true
      .actions
        = f.submit 'Save'
